<?xml version="1.0" encoding="utf-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>io.openshift.qa</groupId>
	<artifactId>login-users</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	<name>login-users</name>
	<url>http://maven.apache.org</url>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<auth.server.address>https://auth.openshift.io</auth.server.address>
		<auth.client.id>740650a2-9c44-4db5-b067-a3d1b2cd2d01</auth.client.id>
		<user.tokens.file>user.tokens</user.tokens.file>
		<user.tokens.include.username>false</user.tokens.include.username>
		<max.users>-1</max.users>
	</properties>
	<dependencies>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>3.8.1</version>
			<scope>test</scope>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-chrome-driver</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>org.seleniumhq.selenium</groupId>
			<artifactId>selenium-support</artifactId>
			<version>3.8.1</version>
		</dependency>
		<dependency>
			<groupId>org.json</groupId>
			<artifactId>json</artifactId>
			<version>20171018</version>
		</dependency>
	</dependencies>
	<profiles>
		<profile>
			<id>auth</id>
			<properties>
				<login.class>io.openshift.qa.LoginUsers</login.class>
			</properties>
		</profile>
		<profile>
			<id>oauth2</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<login.class>io.openshift.qa.LoginUsersOauth2</login.class>
			</properties>
		</profile>
	</profiles>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>java</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<mainClass>${login.class}</mainClass>
					<systemProperties>
						<systemProperty>
							<key>auth.server.address</key>
							<value>${auth.server.address}</value>
						</systemProperty>
						<systemProperty>
							<key>user.tokens.file</key>
							<value>${user.tokens.file}</value>
						</systemProperty>
						<systemProperty>
							<key>auth.client.id</key>
							<value>${auth.client.id}</value>
						</systemProperty>
						<systemProperty>
							<key>max.users</key>
							<value>${max.users}</value>
						</systemProperty>
						<systemProperty>
							<key>output.include.username</key>
							<value>${user.tokens.include.username}</value>
						</systemProperty>
					</systemProperties>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
